# JTM Community Management Platform - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/jtm_db"
DATABASE_URL_TEST="postgresql://username:password@localhost:5432/jtm_db_test"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Email Service Configuration (SMTP)
# For Gmail/Google Workspace: Create App Password at https://myaccount.google.com/apppasswords
# For other providers: Use your email credentials
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password-here"
SMTP_FROM_EMAIL="noreply@yourdomain.org"
SMTP_FROM_NAME="Your Organization Name"

# File Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Application Configuration
APP_URL="http://localhost:3000"
MOBILE_API_URL="http://localhost:3000/api"

# JWT Configuration (for mobile app)
JWT_SECRET="your-jwt-secret-here"

# Admin Configuration
INITIAL_ADMIN_EMAIL="admin@your-organization.com"
INITIAL_ADMIN_PASSWORD="temporary-admin-password"

# QR Code Configuration
QR_CODE_SECRET="your-qr-code-secret"

# Development flags
NODE_ENV="development"